{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "vue"
      }
    ],
    "paths": {
      "*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "vue-frontend-template/**/*.ts",
    "vue-frontend-template/**/*.tsx",
    "vue-frontend-template/**/*.vue",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}